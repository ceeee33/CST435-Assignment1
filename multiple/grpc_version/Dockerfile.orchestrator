# Minimal Dockerfile for Orchestrator Service Only
# This only includes what the orchestrator needs - no other service files
FROM python:3.9-slim

# Set the working directory inside the container
WORKDIR /app

# Install minimal system dependencies (only for matplotlib)
RUN apt-get update && apt-get install -y \
    libfontconfig1 \
    && rm -rf /var/lib/apt/lists/*

# Copy only orchestrator requirements
COPY requirements/requirements.orchestrator.txt requirements.txt
RUN pip install --upgrade pip
RUN pip install --no-cache-dir -r requirements.txt

# Copy only necessary files for orchestrator
COPY pipeline.proto .
COPY generate_protos.py .
COPY services/processor_service.py services/
COPY services/__init__.py services/

# Generate gRPC stubs for pipeline.proto
RUN python generate_protos.py

# Expose only the orchestrator port
EXPOSE 50030

ENV PYTHONUNBUFFERED=1

# Run the orchestrator service
CMD ["python", "-u", "services/processor_service.py"]

